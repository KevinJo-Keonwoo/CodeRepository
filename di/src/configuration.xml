<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean name="p" class="com.my.dto.Product">
		<property name="prodNo" value="C0001"/>
		<property name="prodName" value="아메리카노"/>
		<property name="prodPrice" value="1000"/>
	</bean>
	<bean name="customerRepository" class="com.my.repository.CustomerOracleRepository"/> <!--  리파지토리 객체 -->
	<bean name="customerService" class="com.my.service.CustomerService"> <!--  서비스 객체 -->
		<!-- <constructor-arg ref="customerRepository"/> --> <!-- 리파지토리를 생성자의 인자로 참조하겠다  -->
		<property name="repository" ref="customerRepository"></property> <!-- 세터로 주입 -->
	</bean>
	<bean name="productRepository" class="com.my.repository.ProductOracleRepository">
		<constructor-arg ref="dataSource"/>
	</bean>
	<bean name="productService" class="com.my.service.ProductService">
		<!-- <constructor-arg ref="productRepository"></constructor-arg> -->
		<property name="repository" ref="productRepository"></property>
	</bean>
	<bean name="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">		
		<property name="driverClass" value="oracle.jdbc.driver.OracleDriver"/>
		<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
		<property name="username" value="hr"/>
		<property name="password" value="hr"/>
	</bean>
</beans>


